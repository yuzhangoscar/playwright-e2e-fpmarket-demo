{
  "name": "playwright-e2e-fpmarket-demo",
  "version": "1.0.0",
  "description": "End-to-end tests for FPMarket demo using Playwright with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "report": "playwright show-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "test:allure": "playwright test --reporter=allure-playwright",
    "test:allure:html": "npm run test:allure && npm run allure:generate && npm run allure:open",
    "test:accessibility": "playwright test --config=playwright.accessibility.config.ts",
    "test:wcag": "playwright test --config=playwright.accessibility.config.ts --headed",
    "test:wcag:report": "playwright test --config=playwright.accessibility.config.ts",
    "test:wcag:mobile": "playwright test --config=playwright.accessibility.config.ts --project=accessibility-mobile-chrome",
    "test:wcag:all": "playwright test --config=playwright.accessibility.config.ts --project=accessibility-chromium --project=accessibility-firefox --project=accessibility-webkit",
    "test:wcag:modal": "playwright test --config=playwright.accessibility.config.ts --grep=\"Modal Dismissal Verification\"",
    "test:wcag:basic": "playwright test --config=playwright.accessibility.config.ts --grep=\"WCAG 2.1 AA Level - Full Page Scan\"",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:open": "allure open allure-report",
    "api:dev": "nodemon src/server.ts",
    "api:build": "tsc -p tsconfig.server.json",
    "api:start": "node dist/server.js",
    "api:test": "jest tests/api.test.ts",
    "api:test:watch": "jest tests/api.test.ts --watch",
    "api:test:coverage": "jest tests/api.test.ts --coverage",
    "api:test:allure": "npm run api:test && npm run api:allure:generate && npm run api:allure:open",
    "api:allure:generate": "allure generate ./allure-results-api -o ./allure-report-api --clean",
    "api:allure:serve": "allure serve ./allure-results-api",
    "api:allure:open": "allure open ./allure-report-api",
    "api:health": "curl http://localhost:3000/api/health",
    "bdd:generate": "npx bddgen --config=playwright-bdd.config.ts",
    "test:bdd": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts",
    "test:bdd:headed": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts --headed",
    "test:bdd:smoke": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts --grep '@smoke'",
    "test:bdd:slow": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts --grep '@slow'",
    "test:bdd:chromium": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts --project=bdd-chromium",
    "test:bdd:firefox": "npm run bdd:generate && playwright test --config=playwright-bdd.config.ts --project=bdd-firefox",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "typescript",
    "fpmarket",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.48.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "asynckit": "^0.4.0",
    "axe-core": "^4.11.0",
    "content-disposition": "^1.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "form-data": "^4.0.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-allure2-reporter": "^2.2.8",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.0.2",
    "playwright": "^1.48.0",
    "playwright-bdd": "^8.4.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
