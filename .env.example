# Crypto.com E2E Test Configuration
# Copy this file to .env and update with your actual values

# Base URL for the application
BASE_URL=https://crypto.com/exchange/trade/BTC_USD

# Test Configuration
TEST_TIMEOUT=30000
TEST_RETRIES=2
HEADLESS=true

# Browser Configuration
DEFAULT_BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Data (optional)
DEFAULT_TRADING_SYMBOL=BTC_USD

# Reporting
REPORT_TITLE="Crypto.com E2E Test Results"

# CI/CD Environment Detection
CI=false
GITHUB_ACTIONS=false

# Optional: Extended timeout for slow network conditions
SLOW_MO=0